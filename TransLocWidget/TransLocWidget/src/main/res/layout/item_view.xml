<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/tvAgencyNameItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agency"
        />
    <TextView
        android:id="@+id/tvRouteNameItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAgencyNameItemView"
        android:text="Route"
        />
    <TextView
        android:id="@+id/tvStopNameItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRouteNameItemView"
        android:text="Stop"
        />
</RelativeLayout>